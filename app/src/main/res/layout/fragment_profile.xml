<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"

        tools:context=".features.pengaduan.ui.fragments.PengaduanFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_margin="@dimen/_10sdp"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profil"
                    android:textColor="@color/black"
                    android:fontFamily="@font/popsem"
                    android:textSize="@dimen/_12ssp"/>

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:id="@+id/nestedScroll"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone"
                            android:id="@+id/lrPengguna">

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/til_email"
                                android:layout_columnWeight="1"
                                android:layout_column="0"
                                android:layout_row="1"
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:textColor="@color/black"
                                app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
                                app:boxCornerRadiusBottomStart="@dimen/_8sdp"
                                app:cursorColor="@color/primary"

                                app:boxCornerRadiusTopEnd="@dimen/_8sdp"
                                app:boxCornerRadiusTopStart="@dimen/_8sdp">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etEmail"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Email"
                                    android:fontFamily="@font/popmed"

                                    android:textColorHint="@color/black"

                                    android:inputType="textEmailAddress"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_12ssp"></com.google.android.material.textfield.TextInputEditText>
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/til_phone"
                                android:layout_columnWeight="1"
                                android:layout_column="1"
                                android:layout_row="1"
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:textColor="@color/black"
                                app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
                                app:boxCornerRadiusBottomStart="@dimen/_8sdp"
                                app:cursorColor="@color/primary"

                                app:boxCornerRadiusTopEnd="@dimen/_8sdp"
                                app:boxCornerRadiusTopStart="@dimen/_8sdp">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etPhone"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="No Handphone"
                                    android:fontFamily="@font/popmed"

                                    android:textColorHint="@color/black"

                                    android:inputType="number"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_12ssp"></com.google.android.material.textfield.TextInputEditText>
                            </com.google.android.material.textfield.TextInputLayout>


                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/til_name"

                                android:layout_columnWeight="1"
                                android:layout_column="0"
                                android:layout_row="2"
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:textColor="@color/black"
                                app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
                                app:boxCornerRadiusBottomStart="@dimen/_8sdp"
                                app:cursorColor="@color/primary"

                                app:boxCornerRadiusTopEnd="@dimen/_8sdp"
                                app:boxCornerRadiusTopStart="@dimen/_8sdp">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etName"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Nama Lengkap"
                                    android:fontFamily="@font/popmed"

                                    android:textColorHint="@color/black"

                                    android:inputType="textPersonName"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_12ssp"></com.google.android.material.textfield.TextInputEditText>
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/til_Jabatan"

                                android:layout_columnWeight="1"
                                android:layout_column="1"
                                android:layout_row="2"
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:textColor="@color/black"
                                app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
                                app:boxCornerRadiusBottomStart="@dimen/_8sdp"
                                app:cursorColor="@color/primary"

                                app:boxCornerRadiusTopEnd="@dimen/_8sdp"
                                app:boxCornerRadiusTopStart="@dimen/_8sdp">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etJabatan"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Jabatan"
                                    android:fontFamily="@font/popmed"

                                    android:textColorHint="@color/black"

                                    android:inputType="textPersonName"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_12ssp"></com.google.android.material.textfield.TextInputEditText>
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/til_tgl_lahir"
                                android:layout_columnWeight="1"
                                android:layout_column="1"
                                android:layout_row="3"
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:textColor="@color/black"
                                app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
                                app:boxCornerRadiusBottomStart="@dimen/_8sdp"
                                app:cursorColor="@color/primary"

                                app:boxCornerRadiusTopEnd="@dimen/_8sdp"
                                app:boxCornerRadiusTopStart="@dimen/_8sdp">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etTglLahir"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Tanggal lahir"
                                    android:enabled="false"
                                    android:focusable="false"
                                    android:fontFamily="@font/popmed"

                                    android:textColorHint="@color/black"

                                    android:inputType="textPersonName"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_12ssp"></com.google.android.material.textfield.TextInputEditText>
                            </com.google.android.material.textfield.TextInputLayout>


                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/til_username"

                                android:layout_columnWeight="1"
                                android:layout_column="0"
                                android:layout_row="3"
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:textColor="@color/black"
                                app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
                                app:boxCornerRadiusBottomStart="@dimen/_8sdp"
                                app:cursorColor="@color/primary"

                                app:boxCornerRadiusTopEnd="@dimen/_8sdp"
                                app:boxCornerRadiusTopStart="@dimen/_8sdp">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etUsername"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Username"
                                    android:fontFamily="@font/popmed"

                                    android:textColorHint="@color/black"

                                    android:inputType="textEmailAddress"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_12ssp"></com.google.android.material.textfield.TextInputEditText>
                            </com.google.android.material.textfield.TextInputLayout>


                            <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
                                app:smsp_outlinedBoxColor="@color/black"
                                android:id="@+id/spinnerJk"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_row="4"

                                android:layout_columnWeight="1"
                                android:layout_column="0"

                                android:layout_width="match_parent"
                                app:smsp_hint="Jenis Kelamin"
                                android:layout_height="wrap_content"
                                app:smsp_itemSize="@dimen/_12ssp"
                                app:smsp_autoSelectable="true"
                                app:smsp_baseColor="@color/primary"
                                app:smsp_hintColor="@color/primary"
                                app:smsp_selectedItemListColor="@color/primary"
                                app:smsp_itemListBackgroundColor="@color/white"

                                app:smsp_isOutlined="true"
                                app:smsp_floatingLabelText="Role"
                                app:smsp_alwaysShowFloatingLabel="true"
                                app:smsp_enableFloatingLabel="true"
                                app:smsp_multilineError="false" />

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/til_password"
                                android:layout_columnWeight="1"
                                android:layout_column="1"
                                android:layout_row="4"
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:textColor="@color/black"
                                app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
                                app:boxCornerRadiusBottomStart="@dimen/_8sdp"
                                app:cursorColor="@color/primary"
                                app:passwordToggleEnabled="true"

                                app:boxCornerRadiusTopEnd="@dimen/_8sdp"
                                app:boxCornerRadiusTopStart="@dimen/_8sdp">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etPassword"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Password"
                                    android:enabled="false"
                                    android:focusable="false"
                                    android:fontFamily="@font/popmed"

                                    android:textColorHint="@color/black"

                                    android:inputType="textPassword"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_12ssp"></com.google.android.material.textfield.TextInputEditText>
                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/lrPetugas"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:orientation="vertical"
                            >

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/til_name_admin"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_row="2"

                                android:layout_column="0"
                                android:layout_columnWeight="1"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:textColor="@color/black"
                                app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
                                app:boxCornerRadiusBottomStart="@dimen/_8sdp"
                                app:boxCornerRadiusTopEnd="@dimen/_8sdp"

                                app:boxCornerRadiusTopStart="@dimen/_8sdp"
                                app:cursorColor="@color/primary">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etNameAdmin"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/popmed"
                                    android:hint="Nama Lengkap"

                                    android:inputType="textPersonName"

                                    android:textColor="@color/black"
                                    android:textColorHint="@color/black"
                                    android:textSize="@dimen/_12ssp"></com.google.android.material.textfield.TextInputEditText>
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/til_username_admin"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_row="2"

                                android:layout_column="0"
                                android:layout_columnWeight="1"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:textColor="@color/black"
                                app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
                                app:boxCornerRadiusBottomStart="@dimen/_8sdp"
                                app:boxCornerRadiusTopEnd="@dimen/_8sdp"

                                app:boxCornerRadiusTopStart="@dimen/_8sdp"
                                app:cursorColor="@color/primary">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etUsernameAdmin"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/popmed"
                                    android:hint="Username"

                                    android:inputType="textPersonName"

                                    android:textColor="@color/black"
                                    android:textColorHint="@color/black"
                                    android:textSize="@dimen/_12ssp"></com.google.android.material.textfield.TextInputEditText>
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/til_phone_admin"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_row="1"
                                android:layout_column="1"
                                android:layout_columnWeight="1"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:textColor="@color/black"
                                app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
                                app:boxCornerRadiusBottomStart="@dimen/_8sdp"
                                app:boxCornerRadiusTopEnd="@dimen/_8sdp"

                                app:boxCornerRadiusTopStart="@dimen/_8sdp"
                                app:cursorColor="@color/primary">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etPhoneAdmin"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/popmed"
                                    android:hint="No Handphone"

                                    android:inputType="number"

                                    android:textColor="@color/black"
                                    android:textColorHint="@color/black"
                                    android:textSize="@dimen/_12ssp"></com.google.android.material.textfield.TextInputEditText>
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/til_passwordAdmin"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_row="4"
                                android:layout_column="1"
                                android:layout_columnWeight="1"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:textColor="@color/black"
                                app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
                                app:boxCornerRadiusBottomStart="@dimen/_8sdp"
                                app:boxCornerRadiusTopEnd="@dimen/_8sdp"
                                app:boxCornerRadiusTopStart="@dimen/_8sdp"

                                app:cursorColor="@color/primary"
                                app:passwordToggleEnabled="true">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etPasswordAdmin"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:enabled="false"
                                    android:focusable="false"
                                    android:fontFamily="@font/popmed"
                                    android:hint="Password"

                                    android:inputType="textPassword"

                                    android:textColor="@color/black"
                                    android:textColorHint="@color/black"
                                    android:textSize="@dimen/_12ssp"></com.google.android.material.textfield.TextInputEditText>
                            </com.google.android.material.textfield.TextInputLayout>


                        </LinearLayout>




                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/_20sdp"

                            android:layout_height="wrap_content">
                            <ProgressBar
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                android:layout_centerHorizontal="true"
                                android:id="@+id/progresBar"/>

                            <com.google.android.material.button.MaterialButton
                                android:layout_width="match_parent"
                                android:id="@+id/btnSave"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                app:backgroundTint="@color/primary"
                                android:textColor="@color/white"
                                android:text="Simpan"/>
                        </RelativeLayout>



                        <com.google.android.material.button.MaterialButton
                            android:layout_width="match_parent"
                            android:id="@+id/btnLogOut"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            app:backgroundTint="@color/red"
                            android:textColor="@color/white"
                            android:text="Keluar"/>



                    </LinearLayout>
                </androidx.core.widget.NestedScrollView>






            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_centerInParent="true"
                android:id="@+id/lrAccessDenied"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/primary"
                    android:layout_gravity="center"
                    android:textSize="@dimen/_14ssp"
                    android:fontFamily="@font/popsem"
                    android:layout_height="wrap_content"
                    android:text="Akses Ditolak!"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp"
                    android:fontFamily="@font/popmed"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Untuk mengakses fitur ini anda harus login terlebih dahulu."/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:id="@+id/btnLogin"
                    android:layout_height="wrap_content"
                    android:text="Login"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:id="@+id/lrEmpty"
                android:visibility="gone"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/primary"
                    android:layout_gravity="center"
                    android:textSize="@dimen/_14ssp"
                    android:fontFamily="@font/popsem"
                    android:layout_height="wrap_content"
                    android:text="Tidak ada aduan!"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp"
                    android:fontFamily="@font/popmed"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Riwayat aduan anda akan muncul di sini."/>


            </LinearLayout>

            <ProgressBar
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:id="@+id/progressBarMain"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content"/>





        </RelativeLayout>






    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>