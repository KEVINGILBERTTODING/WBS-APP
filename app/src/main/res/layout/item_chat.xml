<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_marginBottom="@dimen/_8sdp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="@color/white"
        android:layout_width="wrap_content"
        app:cardElevation="0dp"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:id="@+id/cvChat"
        app:cardCornerRadius="@dimen/_10sdp"
        app:contentPadding="@dimen/_8sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="isi pesan apa nanti yanag"
                android:id="@+id/tvIsiPesan"
                android:fontFamily="@font/popreg"
                android:textSize="@dimen/_11ssp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="202323-023"
                android:id="@+id/tvDate"
                android:fontFamily="@font/popreg"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_gravity="end"
                android:textSize="@dimen/_7ssp"
                android:textColor="@color/primary"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="@color/primary"
        android:layout_width="wrap_content"
        android:visibility="gone"
        app:cardElevation="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:id="@+id/cvChatSender"
        app:cardCornerRadius="@dimen/_10sdp"
        app:contentPadding="@dimen/_8sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="isi pesan apa nanti yanag"
                android:id="@+id/tvIsiPesanSender"
                android:fontFamily="@font/popreg"
                android:textSize="@dimen/_11ssp"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="202323-023"
                android:id="@+id/tvDateSender"
                android:fontFamily="@font/popreg"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_gravity="end"
                android:textSize="@dimen/_7ssp"
                android:textColor="@color/white"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>