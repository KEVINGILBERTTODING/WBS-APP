<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".features.dashboard.ui.fragments.DashboardFragment">

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_margin="@dimen/_10sdp"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hi, Guest"
                android:id="@+id/tvUsername"
                android:textColor="@color/black"
                android:fontFamily="@font/popreg"
                android:textSize="@dimen/_10ssp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apa ada pengaduan baru?"
                android:textColor="@color/black"
                android:fontFamily="@font/popsem"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/_12ssp"/>



            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        app:cardCornerRadius="@dimen/_10sdp"
                        app:cardBackgroundColor="@color/primary"
                        android:layout_height="@dimen/_100sdp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:background="@drawable/banner"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_centerHorizontal="true"
                                android:gravity="center_horizontal"

                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Selamat datang,"
                                    android:textColor="@color/white"
                                    android:fontFamily="@font/popreg"
                                    android:textSize="@dimen/_10ssp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Adukan pelanggaran atau masalah Anda."
                                    android:textColor="@color/white"
                                    android:fontFamily="@font/popsem"
                                    android:layout_centerHorizontal="true"
                                    android:textSize="@dimen/_12ssp"/>

                                <com.google.android.material.button.MaterialButton
                                    android:layout_width="wrap_content"
                                    app:backgroundTint="@color/white"
                                    android:fontFamily="@font/popmed"
                                    android:id="@+id/btnLogin"
                                    android:textSize="@dimen/_10ssp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:text="Masuk"
                                    android:textColor="@color/primary"
                                    android:layout_height="wrap_content"/>

                            </LinearLayout>


                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:id="@+id/lrMenu">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Menu Petugas"
                            android:textColor="@color/black"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:fontFamily="@font/popsem"
                            android:layout_gravity="center_horizontal"
                            android:layout_centerHorizontal="true"
                            android:textSize="@dimen/_12ssp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_marginRight="@dimen/_15sdp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    app:contentPadding="@dimen/_5sdp"
                                    android:layout_height="wrap_content"
                                    app:cardElevation="0dp"
                                    android:layout_gravity="center"
                                    app:cardCornerRadius="@dimen/_20sdp"
                                    app:cardBackgroundColor="@color/primary">

                                    <ImageButton
                                        android:layout_width="@dimen/_25sdp"
                                        android:id="@+id/btnPengguna"
                                        android:layout_height="@dimen/_25sdp"
                                        android:background="@drawable/ic_pengguna"/>


                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_8ssp"
                                    android:layout_gravity="center_horizontal"
                                    android:fontFamily="@font/popmed"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_height="wrap_content"
                                    android:text="Pengguna"/>



                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/_15sdp"
                                android:orientation="vertical">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    app:contentPadding="@dimen/_5sdp"
                                    android:layout_height="wrap_content"
                                    app:cardElevation="0dp"
                                    android:layout_gravity="center"
                                    app:cardCornerRadius="@dimen/_20sdp"
                                    app:cardBackgroundColor="@color/primary">

                                    <ImageButton
                                        android:layout_width="@dimen/_25sdp"
                                        android:id="@+id/btnAdmin"
                                        android:layout_height="@dimen/_25sdp"
                                        android:background="@drawable/ic_admin"/>


                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_8ssp"
                                    android:layout_gravity="center_horizontal"
                                    android:fontFamily="@font/popmed"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_height="wrap_content"
                                    android:text="Petugas"/>



                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_marginRight="@dimen/_15sdp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    app:contentPadding="@dimen/_5sdp"
                                    android:layout_height="wrap_content"
                                    app:cardElevation="0dp"
                                    android:layout_gravity="center"
                                    app:cardCornerRadius="@dimen/_20sdp"
                                    app:cardBackgroundColor="@color/primary">

                                    <ImageButton
                                        android:layout_width="@dimen/_25sdp"
                                        android:id="@+id/btnKriteria"
                                        android:layout_height="@dimen/_25sdp"
                                        android:backgroundTint="@color/white"
                                        android:background="@drawable/ic_kriteria"/>


                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_8ssp"
                                    android:layout_gravity="center_horizontal"
                                    android:fontFamily="@font/popmed"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_height="wrap_content"
                                    android:text="Kriteria"/>



                            </LinearLayout>



                        </LinearLayout>






                    </LinearLayout>






                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pengaduan"
                        android:textColor="@color/black"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:fontFamily="@font/popsem"
                        android:layout_gravity="center_horizontal"
                        android:layout_centerHorizontal="true"
                        android:textSize="@dimen/_12ssp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/desc_home"
                        android:gravity="center_horizontal"
                        android:textColor="@color/black"
                        android:fontFamily="@font/popreg"
                        android:layout_gravity="center_horizontal"
                        android:layout_centerHorizontal="true"
                        android:textSize="@dimen/_10ssp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alur Pengaduan"
                        android:textColor="@color/black"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:fontFamily="@font/popsem"
                        android:layout_gravity="center_horizontal"
                        android:layout_centerHorizontal="true"
                        android:textSize="@dimen/_12ssp"/>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        app:cardCornerRadius="@dimen/_10sdp"
                        app:contentPadding="@dimen/_8sdp"
                        app:cardUseCompatPadding="true"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:gravity=""
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/_50sdp"
                                android:src="@drawable/step1"
                                android:layout_marginRight="@dimen/_8sdp"
                                android:layout_height="@dimen/_50sdp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Isilah form pengaduan yang sudah disediakan kemudian kirimkan aduan tersebut agar dapat bisa ditanggapi oleh admin."
                                android:textColor="@color/black"
                                android:fontFamily="@font/popreg"
                                android:layout_gravity="center_horizontal"
                                android:layout_centerHorizontal="true"
                                android:textSize="@dimen/_10ssp"/>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        app:cardCornerRadius="@dimen/_10sdp"
                        app:contentPadding="@dimen/_8sdp"
                        app:cardUseCompatPadding="true"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:gravity=""
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/_50sdp"
                                android:src="@drawable/step2"
                                android:layout_marginRight="@dimen/_8sdp"
                                android:layout_height="@dimen/_50sdp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tanyakan kembali apabila aduan yang kamu kirim masih belum jelas atau sampaikan keluhanmu yang lain."
                                android:textColor="@color/black"
                                android:fontFamily="@font/popreg"
                                android:layout_gravity="center_horizontal"
                                android:layout_centerHorizontal="true"
                                android:textSize="@dimen/_10ssp"/>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        app:cardCornerRadius="@dimen/_10sdp"
                        app:contentPadding="@dimen/_8sdp"
                        app:cardUseCompatPadding="true"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:gravity=""
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/_50sdp"
                                android:src="@drawable/step3"
                                android:layout_marginRight="@dimen/_8sdp"
                                android:layout_height="@dimen/_50sdp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Selesaikan aduan yang kamu ajukan ketika sudah mendapat balasan yang sesuai dengan yang kamu inginkan."
                                android:textColor="@color/black"
                                android:fontFamily="@font/popreg"
                                android:layout_gravity="center_horizontal"
                                android:layout_centerHorizontal="true"
                                android:textSize="@dimen/_10ssp"/>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>


        </LinearLayout>



    </RelativeLayout>
</layout>